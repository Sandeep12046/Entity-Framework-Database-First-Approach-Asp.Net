@model EFDbFirstApproachProject.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Product Details</h2>

<table class="table">
    <tr>
        <th>Product ID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Product Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Date of Purchase</th>
        <td>@(Model.DateOfPurchase.HasValue?Model.DateOfPurchase.Value.ToString("d/M/yyyy"):" ")</td>
    </tr>
    <tr>
        <th>Availability Status</th>
        <td>@Model.AvailabilityStatus</td>
        </tr>
    <tr>
        <th>Category</th>
        <td>@Model.Category.CategoryName</td>
    </tr>
    <tr>
        <th>Brand</th>
        <td>@Model.Brand.BrandName</td>
    </tr>
    <tr>
        <th>Active</th>
        <td>@Model.Active</td>
    </tr>
</table>
<a href="/products/index">Back to Products</a>